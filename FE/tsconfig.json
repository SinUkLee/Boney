{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"],
      "app/*": ["./app/*"],
      "expo-router": ["./node_modules/expo-router"]
    },
    "types": ["nativewind/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types",
    "nativewind-env.d.ts"
  ]
}
